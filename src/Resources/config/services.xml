<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="MoptWordline\Controller\Api\ApiTestController" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="monolog.logger" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        <service id="MoptWordline\Service\Payment">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Symfony\Contracts\Translation\TranslatorInterface" />
            <argument type="service" id="monolog.logger" />
            <argument type="service" id="session" />
            <tag name="shopware.payment.method.async" priority="-5100"/>
        </service>
        <service id="MoptWordline\Controller\Payment\PaymentFinalizeController" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
            <argument type="service" id="order_transaction.repository"/>
            <argument type="service" id="MoptWordline\Service\Payment"/>
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="router"/>
            <argument type="service" id="monolog.logger" />
            <argument type="service" id="Symfony\Contracts\Translation\TranslatorInterface" />
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
